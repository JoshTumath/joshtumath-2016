<header>
    <div class="wrapper">
        <h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
        
        <button id="nav-toggle" hidden></button>
        <nav id="nav">
            <ul>
                {{#foreach navigation}}
                    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
                {{/foreach}}
            </ul>
        </nav>
    </div>
</header>
